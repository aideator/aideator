# AIdeator Environment Configuration
# Copy this file to .env.local and configure for your setup

# =============================================================================
# CORE SETTINGS
# =============================================================================

# Application Environment
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# =============================================================================
# FEATURE FLAGS - Control what's enabled
# =============================================================================

# Authentication Features
REQUIRE_USER_REGISTRATION=true        # Keep user system (needed for future features)
REQUIRE_API_KEYS_FOR_AGENTS=false     # Set false for simple development
REQUIRE_PER_USER_KEYS=false           # Set false to use global keys
ENABLE_KUBERNETES_SECRETS=false       # Set false for local development

# Security Features  
ENABLE_RATE_LIMITING=false            # Disable for development
ENABLE_CORS_STRICT=false              # Allow all origins in dev
ENABLE_JWT_EXPIRATION=false           # Long-lived tokens in dev

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL Configuration (recommended)
DATABASE_URL=postgresql+asyncpg://aideator:aideator123@localhost:5432/aideator

# SQLite Alternative (simpler setup)
# DATABASE_URL=sqlite+aiosqlite:///./aideator.db

DATABASE_ECHO=false

# =============================================================================
# REDIS (Required for streaming)
# =============================================================================

REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
# When REQUIRE_PER_USER_KEYS=false, these global keys are used for all agents

# OpenAI (Required for most models)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic (For Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI (For Gemini models)
GEMINI_API_KEY=AIza-your-gemini-key-here

# =============================================================================
# KUBERNETES (Only needed if ENABLE_KUBERNETES_SECRETS=true)
# =============================================================================

KUBERNETES_NAMESPACE=aideator

# =============================================================================
# SECURITY (Auto-generated in development, set manually in production)
# =============================================================================

# Will auto-generate 32-char keys if not provided in development
SECRET_KEY=
ENCRYPTION_KEY=

# LiteLLM Gateway Key (auto-generated if empty)
LITELLM_MASTER_KEY=

# =============================================================================
# DEVELOPMENT SHORTCUTS
# =============================================================================

# Skip complex setup - uses test user and global API keys
SIMPLE_DEV_MODE=true

# Auto-create test user on startup (email: test@aideator.local, password: testpass123)
AUTO_CREATE_TEST_USER=true

# =============================================================================
# ADVANCED SETTINGS (Usually don't need to change)
# =============================================================================

# Agent Configuration
MAX_VARIATIONS=5
MAX_CONCURRENT_RUNS=10
DEFAULT_AGENT_MODEL=gpt-4o-mini

# Timeouts
ACCESS_TOKEN_EXPIRE_MINUTES=2880  # 48 hours in dev mode

# CORS Origins (JSON array or comma-separated)
ALLOWED_ORIGINS=["*"]

# Allowed Git Hosts
ALLOWED_GIT_HOSTS=["github.com","gitlab.com"]

# LiteLLM Proxy
LITELLM_PROXY_URL=http://localhost:4000